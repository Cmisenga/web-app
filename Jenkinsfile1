pipeline {
    agent any 
    def mavenhome = tool name: 'mvn-home', type: 'maven'
    stages {
        stage('SCM-Checkout') { 
            steps {
                git branch: 'main', credentialsId: 'git-cred', 
				url: 'https://github.com/vikas99341/web-app.git'
            }
        }
        stage('clean-Compile') { 
            steps {
                sh "${mavenhome}/bin/mvn clean compile"
            }
        }
        stage('Package') { 
            steps {
                sh "${mavenhome}/bin/mvn package"
            }
        }
    }
}
